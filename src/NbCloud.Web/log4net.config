<log4net>
  <appender name="Trace" type="log4net.Appender.TraceAppender">
    <layout type="log4net.Layout.PatternLayout">
      <conversionPattern value="[NbCloud] [%-5level] [%message]【记录时间：%date 线程ID:[%thread]】%newline" />
    </layout>
  </appender>
  <appender name="RollingFile" type="log4net.Appender.RollingFileAppender">
    <file value="Content\logs\log.txt" />
    <appendToFile value="true" />
    <rollingStyle value="Size" />
    <maxSizeRollBackups value="10" />
    <maximumFileSize value="100KB" />
    <staticLogFileName value="true" />
    <datePattern value="yyyy-MM-dd HH:mm:ss" />
    <layout type="log4net.Layout.PatternLayout">
      <conversionPattern value="[NbCloud] [%-5level] [%message]【记录时间：%date 线程ID:[%thread]】%newline" />
    </layout>
  </appender>
  <root>
    <level value="OFF" />
  </root>
  <logger name="NbCloud">
    <level value="ALL" />
    <appender-ref ref="Trace" />
  </logger>
  <logger name="NbCloud.Web.Ninjects.NinjectModuleForConvention">
    <level value="OFF" />
  </logger>
  <logger name="NbCloud.Common.NHibernates.MySessionFactory">
    <level value="OFF" />
  </logger>
</log4net>